<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Growing Bar Graph</title>
  <style>
    .bar-container {
      width: 600px;
      margin: 20px;
    }
    .bar {
      background-color: #4CAF50;
      height: 30px;
      margin: 10px 0;
      color: white;
      text-align: right;
      padding-right: 10px;
      line-height: 30px;
      width: 0; /* Start at 0 */
      transition: width 1s ease-out; /* Smooth growth */
    }
    .label {
      margin-bottom: 5px;
      font-weight: bold;
    }
  </style>
</head>
<body>

<div id="graph" class="bar-container"></div>

<script>
  // Example data
  const data = [
    { label: "Apples", value: 70 },
    { label: "Bananas", value: 40 },
    { label: "Cherries", value: 90 },
    { label: "Dates", value: 50 }
  ];

  const graphContainer = document.getElementById('graph');

  data.forEach(item => {
    // Label
    const label = document.createElement('div');
    label.className = 'label';
    label.innerText = item.label;
    graphContainer.appendChild(label);

    // Bar
    const bar = document.createElement('div');
    bar.className = 'bar';
    bar.innerText = item.value + '%';
    graphContainer.appendChild(bar);

    // Grow the bar after slight delay
    setTimeout(() => {
      bar.style.width = item.value + '%';
    }, 100); // short delay to trigger animation
  });
</script>

</body>
</html>
